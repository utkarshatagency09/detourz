                  <input type="radio" name="blog_allow_guest_comment" value="0" id="input-allow-guest-comment-disabled" checked>
                  <label for="input-allow-guest-comment-disabled" >{{ text_disabled }}</label>
                  {% endif %} 
                </div>
              </div>
            </div>
                
            {# comment require approval #}
            <div class="form-group">
              <label class="col-xs-3 control-label" >{{ entry_require_approval }}</label>
              <div class="col-xs-9">
                <div class="mz-switch-field">
                  {% if (blog_comment_require_approval < 0) %} 
                  <input type="radio" name="blog_comment_require_approval" value="1" id="input-comment-require-approval-enabled">
                  <label for="input-comment-require-approval-enabled" >{{ text_enabled }}</label>
                  <input type="radio" name="blog_comment_require_approval" value="0" id="input-comment-require-approval-disabled">
                  <label for="input-comment-require-approval-disabled">{{ text_disabled }}</label>
                  <input type="radio" name="blog_comment_require_approval" value="-1" id="input-comment-require-approval-guest" checked>
                  <label for="input-comment-require-approval-enabled" >{{ text_for_guest }}</label>
                  {% elseif (blog_comment_require_approval) %} 
                  <input type="radio" name="blog_comment_require_approval" value="1" id="input-comment-require-approval-enabled" checked>
                  <label for="input-comment-require-approval-enabled" >{{ text_enabled }}</label>
                  <input type="radio" name="blog_comment_require_approval" value="0" id="input-comment-require-approval-disabled">
                  <label for="input-comment-require-approval-disabled">{{ text_disabled }}</label>
                  <input type="radio" name="blog_comment_require_approval" value="-1" id="input-comment-require-approval-guest">
                  <label for="input-comment-require-approval-enabled" >{{ text_for_guest }}</label>
                  {% else %} 
                  <input type="radio" name="blog_comment_require_approval" value="1" id="input-comment-require-approval-enabled" >
                  <label for="input-comment-require-approval-enabled">{{ text_enabled }}</label>
                  <input type="radio" name="blog_comment_require_approval" value="0" id="input-comment-require-approval-disabled" checked>
                  <label for="input-comment-require-approval-disabled" >{{ text_disabled }}</label>
                  <input type="radio" name="blog_comment_require_approval" value="-1" id="input-comment-require-approval-guest">
                  <label for="input-comment-require-approval-enabled" >{{ text_for_guest }}</label>
                  {% endif %} 
                </div>
              </div>
            </div>
                
            {# comment form captcha status #}
            <div class="form-group">
              <label class="col-xs-3 control-label" >{{ entry_comment_form_captcha }}</label>
              <div class="col-xs-9">
                <div class="mz-switch-field">
                  {% if (blog_comment_form_captcha) %} 
                  <input type="radio" name="blog_comment_form_captcha" value="1" id="input-comment-form-captcha-enabled" checked>
                  <label for="input-comment-form-captcha-enabled" >{{ text_enabled }}</label>
                  <input type="radio" name="blog_comment_form_captcha" value="0" id="input-comment-form-captcha-disabled">
                  <label for="input-comment-form-captcha-disabled">{{ text_disabled }}</label>
                  {% else %} 
                  <input type="radio" name="blog_comment_form_captcha" value="1" id="input-comment-form-captcha-enabled" >
                  <label for="input-comment-form-captcha-enabled">{{ text_enabled }}</label>
                  <input type="radio" name="blog_comment_form_captcha" value="0" id="input-comment-form-captcha-disabled" checked>
                  <label for="input-comment-form-captcha-disabled" >{{ text_disabled }}</label>
                  {% endif %} 
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
<script>
$('input[type="range"]').on('input change', function(){
    $(this).siblings('.input-group-addon').text($(this).val());
});
</script>
<form action="{{ import }}" enctype="multipart/form-data" method="post" id="form-import" style="display: none;"><input type="file" accept=".json" name="file" /></form>
<script>
$('#button-import').on('click', function(){
    $('#form-import input[name=\'file\']').val('').trigger('click');
    
    if (typeof timer != 'undefined') {
    	clearInterval(timer);
    }

    timer = setInterval(function() {
        if ($('#form-import input[name=\'file\']').val() != '') {
            clearInterval(timer);
            $('#form-import').submit();
        }
    }, 500);
    
});
</script>
