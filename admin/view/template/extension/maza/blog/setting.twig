        {# Article listing #}
        <div class="panel mz-panel-default">
          <div class="panel-heading">{{ text_article_listing }}</div>
          <div class="panel-body">
              
            {#Article limit per page#}
            <div class="form-group required">
              <label class="col-xs-3 control-label" for="input-article-grid-limit">{{ entry_article_grid_limit }}</label>
              <div class="col-xs-9">
                <input type="number" name="blog_article_grid_limit" value="{{ blog_article_grid_limit }}" placeholder="{{ entry_article_grid_limit }}" id="input-article-grid-limit" class="form-control" />
                {% if err_article_grid_limit %}
                <div class="text-danger">{{ err_article_grid_limit }}</div>
                {% endif %}
              </div>
            </div>
              
            {#Article grid image size#}
            <div class="form-group required">
              <label class="col-xs-3 control-label">{{ entry_article_image_size }}</label>
              <div class="col-xs-9">
                <input type="number" name="blog_article_grid_image_width" value="{{ blog_article_grid_image_width }}" placeholder="{{ text_width }}" id="input-article-grid-image-width" class="form-control small" />
                <input type="number" name="blog_article_grid_image_height" value="{{ blog_article_grid_image_height }}" placeholder="{{ text_height }}" id="input-article-grid-image-height" class="form-control small" />
                {% if err_article_grid_image_size %}
                <div class="text-danger">{{ err_article_grid_image_size }}</div>
                {% endif %}
              </div>
            </div>
              
            <!--Responsive image width-->
            <div class="form-group">
              <label class="col-xs-3 control-label"><span data-toggle="tooltip" title="{{ help_responsive_width }}">{{ entry_responsive_width }}</span></label>
              <div class="col-xs-9">
                <div class="input-group">
                {% for breakpoint, srcset_width in blog_article_grid_image_srcset %}
                  <span class="input-group-addon">{{ breakpoint|upper }}</span>
                  <input type="number" name="blog_article_grid_image_srcset[{{ breakpoint }}]" value="{{ srcset_width }}" id="input-article-grid-image-srcset-{{ breakpoint }}" placeholder="0px" class="form-control" />
                {% endfor %}
                </div>
              </div>
            </div>
              
            {#Article image lazy loading#}
            <div class="form-group">
              <label class="col-xs-3 control-label" >{{ entry_article_image_lazy_loading }}</label>
              <div class="col-xs-9">
                <div class="mz-switch-field">
                  {% if (blog_article_grid_image_lazy_loading) %} 
                  <input type="radio" name="blog_article_grid_image_lazy_loading" value="1" id="input-article-grid-image-lazy-loading-enabled" checked>
                  <label for="input-article-grid-image-lazy-loading-enabled" >{{ text_enabled }}</label>
                  <input type="radio" name="blog_article_grid_image_lazy_loading" value="0" id="input-article-grid-image-lazy-loading-disabled">
                  <label for="input-article-grid-image-lazy-loading-disabled">{{ text_disabled }}</label>
                  {% else %} 
                  <input type="radio" name="blog_article_grid_image_lazy_loading" value="1" id="input-article-grid-image-lazy-loading-enabled" >
                  <label for="input-article-grid-image-lazy-loading-enabled">{{ text_enabled }}</label>
                  <input type="radio" name="blog_article_grid_image_lazy_loading" value="0" id="input-article-grid-image-lazy-loading-disabled" checked>
                  <label for="input-article-grid-image-lazy-loading-disabled" >{{ text_disabled }}</label>
                  {% endif %} 
                </div>
              </div>
            </div>
                
            {#Article image additional#}
            <div class="form-group">
              <label class="col-xs-3 control-label" >{{ entry_article_additional_image }}</label>
              <div class="col-xs-9">
                <div class="mz-switch-field">
                  {% if (blog_article_grid_additional_image) %} 
                  <input type="radio" name="blog_article_grid_additional_image" value="1" id="input-article-grid-additional-image-enabled" checked>
                  <label for="input-article-grid-additional-image-enabled" >{{ text_enabled }}</label>
                  <input type="radio" name="blog_article_grid_additional_image" value="0" id="input-article-grid-additional-image-disabled">
                  <label for="input-article-grid-additional-image-disabled">{{ text_disabled }}</label>
                  {% else %} 
                  <input type="radio" name="blog_article_grid_additional_image" value="1" id="input-article-grid-additional-image-enabled" >
                  <label for="input-article-grid-additional-image-enabled">{{ text_enabled }}</label>
                  <input type="radio" name="blog_article_grid_additional_image" value="0" id="input-article-grid-additional-image-disabled" checked>
                  <label for="input-article-grid-additional-image-disabled" >{{ text_disabled }}</label>
                  {% endif %} 
                </div>
              </div>
            </div>
               
            {#Article description_limit #}
            <div class="form-group required">
              <label class="col-xs-3 control-label" for="input-article-grid-description-limit">{{ entry_article_description_limit }}</label>
              <div class="col-xs-9">
                <input type="number" name="blog_article_grid_description_limit" value="{{ blog_article_grid_description_limit }}" placeholder="{{ entry_article_description_limit }}" id="input-article-grid-description-limit" class="form-control" />
                {% if err_article_grid_description_limit %}
                <div class="text-danger">{{ err_article_grid_description_limit }}</div>
                {% endif %}
              </div>
            </div>
          </div>
