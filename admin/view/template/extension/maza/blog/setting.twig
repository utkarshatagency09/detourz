        {# Comment #}
        <div class="panel mz-panel-default">
          <div class="panel-heading">{{ text_comment }}</div>
          <div class="panel-body">
            {# comment status #}
            <div class="form-group">
              <label class="col-xs-3 control-label" >{{ entry_comment_status }}</label>
              <div class="col-xs-9">
                <div class="mz-switch-field">
                  {% if (blog_comment_status) %} 
                  <input type="radio" name="blog_comment_status" value="1" id="input-comment-status-enabled" checked>
                  <label for="input-comment-status-enabled" >{{ text_enabled }}</label>
                  <input type="radio" name="blog_comment_status" value="0" id="input-comment-status-disabled">
                  <label for="input-comment-status-disabled">{{ text_disabled }}</label>
                  {% else %} 
                  <input type="radio" name="blog_comment_status" value="1" id="input-comment-status-enabled" >
                  <label for="input-comment-status-enabled">{{ text_enabled }}</label>
                  <input type="radio" name="blog_comment_status" value="0" id="input-comment-status-disabled" checked>
                  <label for="input-comment-status-disabled" >{{ text_disabled }}</label>
                  {% endif %} 
                </div>
              </div>
            </div>
                
            {# allow guest comment status #}
            <div class="form-group">
              <label class="col-xs-3 control-label" >{{ entry_allow_guest_comment }}</label>
              <div class="col-xs-9">
                <div class="mz-switch-field">
                  {% if (blog_allow_guest_comment) %} 
