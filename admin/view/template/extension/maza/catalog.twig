                {% for scale_type in list_image_scale %} 
                  {% if (catalog_image_scale == scale_type.code) %} 
                  <input type="radio" name="catalog_image_scale" value="{{ scale_type.code }}" id="input-image-scale-{{ scale_type.code }}" checked>
                  <label for="input-image-scale-{{ scale_type.code }}" >{{ scale_type.text }}</label>
                  {% else %} 
                  <input type="radio" name="catalog_image_scale" value="{{ scale_type.code }}" id="input-image-scale-{{ scale_type.code }}">
                  <label for="input-image-scale-{{ scale_type.code }}" >{{ scale_type.text }}</label>
                  {% endif %} 
                {% endfor %} 
