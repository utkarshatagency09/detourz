{{ mz_column_left }}
{{ mz_header }}
<div id="content" class="mz-content">
  
  <!-- Alert message -->
  {% if (success is defined) %} 
    <div class="alert alert-success"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> {{ success }} <a href="#" class="close" data-dismiss="alert" aria-label="close"><i class="fa fa-times-circle" aria-hidden="true"></i></a></div>
  {% endif %} 
  {% if (warning is defined) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> {{ warning }} <a href="#" class="close" data-dismiss="alert" aria-label="close"><i class="fa fa-times-circle" aria-hidden="true"></i></a></div>
  {% endif %} 
  
  <!-- Form -->
  <form action="{{ action }}" class="form-horizontal" enctype="multipart/form-data" id="form-mz-layout" method="post">
    <div class="tab-content">

      <!--General-->
      <div id="tab-mz-general" class="tab-pane fade in active">
        <div class="panel mz-panel-default">
          <div class="panel-body">
            <!--name-->
            <div class="form-group required">
              <label class="col-xs-2 control-label" for="input-name">{{ entry_name }}</label>
              <div class="col-xs-10">
                <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
                {% if err_name %}
                <div class="text-danger">{{ err_name }}</div>
                {% endif %}
              </div>
            </div>

            <!--type-->
            <div class="form-group required">
              <label class="col-xs-2 control-label" for="input-mz-layout-type">{{ entry_type }}</label>
              <div class="col-xs-10">
                <select name="mz_layout_type" id="input-mz-layout-type" class="form-control">
                {% for layout_type in layout_types %}
                  {% if (mz_layout_type == layout_type.code) %} 
                  <option value="{{ layout_type.code }}" selected="">{{ layout_type.name }}</option>
                  {% else %} 
                  <option value="{{ layout_type.code }}">{{ layout_type.name }}</option>
                  {% endif %}
                {% endfor %} 
                </select>
              </div>
            </div>

            <!--override skin-->
            <div class="form-group">
              <label class="col-xs-2 control-label" for="input-mz-override-skin">{{ entry_override_skin }}</label>
              <div class="col-xs-10">
                <select name="mz_override_skin_id" id="input-mz-override-skin" class="form-control">
                  <option value="0"></option>
                  {% for skin in skins %}
                    {% if skin.skin_id == mz_override_skin_id %}
                    <option value="{{ skin.skin_id }}" selected="">{{ skin.name }}</option>
                    {% else %}
                    <option value="{{ skin.skin_id }}">{{ skin.name }}</option>
                    {% endif %}
                  {% endfor %}
                </select>
              </div>
            </div>
          </div>
        </div>
        <div class="panel mz-panel-default">
          <div class="panel-heading">{{ entry_route }}</div>
          <div class="panel-body">
            <table id="route" class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <td class="text-left">{{ entry_store }}</td>
                  <td class="text-left">{{ entry_route }}</td>
                  <td></td>
                </tr>
              </thead>
              <tbody>
                {% set route_row = 0 %}
                {% for value in layout_route %}
                <tr id="route-row{{ route_row }}">
                  <td class="text-left"><select name="layout_route[{{ route_row }}][store_id]" class="form-control large">
                      {% for store in stores %}
                      {% if store.store_id == value.store_id %}
                      <option value="{{ store.store_id }}" selected="selected">{{ store.name }}</option>
                      {% else %}
                      <option value="{{ store.store_id }}">{{ store.name }}</option>
                      {% endif %}
                      {% endfor %}
                    </select></td>
                  <td class="text-left"><input type="text" name="layout_route[{{ route_row }}][route]" value="{{ value.route }}" placeholder="{{ entry_route }}" class="form-control large" /></td>
                  <td class="text-left"><button type="button" onclick="$('#route-row{{ route_row }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>
                </tr>
                {% set route_row = route_row + 1 %}
                {% endfor %}
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="2"></td>
                  <td class="text-left"><button type="button" onclick="addRoute();" data-toggle="tooltip" title="{{ button_route_add }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button></td>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
<script>
var route_row = {{ route_row }};

function addRoute() {
	html  = '<tr id="route-row' + route_row + '">';
	html += '  <td class="text-left"><select name="layout_route[' + route_row + '][store_id]" class="form-control large">';
	{% for store in stores %}
	html += '<option value="{{ store.store_id }}">{{ store.name|escape('js') }}</option>';
	{% endfor %}
	html += '  </select></td>';
	html += '  <td class="text-left"><input type="text" name="layout_route[' + route_row + '][route]" value="" placeholder="{{ entry_route }}" class="form-control large" /></td>';
	html += '  <td class="text-left"><button type="button" onclick="$(\'#route-row' + route_row + '\').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
	html += '</tr>';
	
	$('#route tbody').append(html);
	
	route_row++;
}
</script>
{{ mz_footer }}