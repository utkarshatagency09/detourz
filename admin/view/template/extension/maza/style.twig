{{ header }}{{ column_left }} 
{{ mz_column_left }}
{{ mz_header }}
<div id="content" class="mz-content">
  
  <!-- Alert message -->
  {% if (success is defined) %} 
    <div class="alert alert-success"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> {{ success }} <a href="#" class="close" data-dismiss="alert" aria-label="close"><i class="fa fa-times-circle" aria-hidden="true"></i></a></div>
  {% endif %} 
  {% if (warning is defined) %} 
    <div class="alert alert-warning"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> {{ warning }} <a href="#" class="close" data-dismiss="alert" aria-label="close"><i class="fa fa-times-circle" aria-hidden="true"></i></a></div>
  {% endif %} 
  
  <!-- Form -->
  <form action="{{ action }}" class="form-horizontal" enctype="multipart/form-data" id="form-mz-style" method="post">
    <div class="tab-content">
        
      <!--Layout-->
      <div id="tab-mz-layout" class="tab-pane fade in active">
        <div class="panel mz-panel-default">
          <div class="panel-heading">{{ text_general }}</div>
          <div class="panel-body">
              
            <!-- layout style -->
            <div class="form-group">
              <label class="col-xs-3 control-label" for="input-layout-style">{{ entry_layout_style }}</label>
              <div class="col-xs-9">
                <select class="form-control" id="input-layout-style" name="style_layout_style" >
                  {% if (style_layout_style == 'full') %} 
                  <option value="full" selected="">{{ text_full_layout }}</option>
                  <option value="box">{{ text_box_layout }}</option>
                  {% else %} 
                  <option value="full">{{ text_full_layout }}</option>
                  <option value="box" selected="">{{ text_box_layout }}</option>
                  {% endif %} 
                </select>
              </div>
            </div>
              
            <!--page loader-->
            <div class="form-group">
              <label class="col-xs-3 control-label" for="input-page-loader-status">{{ entry_page_loader }}</label>
              <div class="col-xs-9">
                <div class="mz-switch-field">
                  {% if (style_page_loader_status) %} 
                  <input type="radio" name="style_page_loader_status" value="1" id="input-page-loader-enabled" checked>
                  <label for="input-page-loader-enabled">{{ text_enabled }}</label>
                  <input type="radio" name="style_page_loader_status" value="0" id="input-page-loader-disabled">
                  <label for="input-page-loader-disabled" >{{ text_disabled }}</label>
                  {% else %} 
                  <input type="radio" name="style_page_loader_status" value="1" id="input-page-loader-enabled" >
                  <label for="input-page-loader-enabled" >{{ text_enabled }}</label>
                  <input type="radio" name="style_page_loader_status" value="0" id="input-page-loader-disabled" checked>
                  <label for="input-page-loader-disabled">{{ text_disabled }}</label>
                  {% endif %} 
                </div>
              </div>
            </div>

            <!--Back to top-->
            <div class="form-group">
              <label class="col-xs-3 control-label" for="input-back-to-top-status"><span data-toggle="tooltip" title="{{ help_back_to_top }}">{{ entry_back_to_top }}</span></label>
              <div class="col-xs-9">
                <div class="mz-switch-field">
                  {% if (style_back_to_top_status) %} 
                  <input type="radio" name="style_back_to_top_status" value="1" id="input-back-to-top-enabled" checked>
                  <label for="input-back-to-top-enabled">{{ text_enabled }}</label>
                  <input type="radio" name="style_back_to_top_status" value="0" id="input-back-to-top-disabled">
                  <label for="input-back-to-top-disabled" >{{ text_disabled }}</label>
                  {% else %} 
                  <input type="radio" name="style_back_to_top_status" value="1" id="input-back-to-top-enabled" >
                  <label for="input-back-to-top-enabled" >{{ text_enabled }}</label>
                  <input type="radio" name="style_back_to_top_status" value="0" id="input-back-to-top-disabled" checked>
                  <label for="input-back-to-top-disabled">{{ text_disabled }}</label>
                  {% endif %} 
                </div>
              </div>
            </div>
            
            <div class="form-group">
              <label class="col-xs-3 control-label" ><span data-toggle="tooltip" title="{{ help_spinner }}">{{ entry_spinner }}</span></label>
              <div class="col-xs-9">
                <ul class="nav nav-tabs">
                  <li class="active"><a href="#tab-loader-spinner-image" data-meta="image" data-toggle="tab">{{ tab_image }}</a></li>
                  <li><a href="#tab-loader-spinner-svg" data-meta="image" data-toggle="tab">{{ tab_svg }}</a></li>
                </ul>
                <div class="tab-content">
                  <div class="tab-pane active" id="tab-loader-spinner-image">
                    <div class="el-group">
                    {% for language in languages %}
                      <span class="el-item-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                      <div class="el-item">
                        <a href="" id="thumb-loader-spinner-image{{ language.language_id }}" data-toggle="image" class="img-thumbnail"><img src="{{ (thumb_loader_spinner_image[language.language_id] is defined)?thumb_loader_spinner_image[language.language_id]:placeholder_image }}" alt="" title="" data-placeholder="{{ placeholder_image }}" /></a><input type="hidden" name="style_loader_spinner_image[{{ language.language_id }}]" value="{{ (style_loader_spinner_image[language.language_id] is defined)?style_loader_spinner_image[language.language_id]:'' }}" id="input-loader-spinner-image{{ language.language_id }}" />
                      </div>
                    {% endfor %}
                    </div>
                  </div>
                  <div class="tab-pane" id="tab-loader-spinner-svg">
                    <div class="el-group">
                    {% for language in languages %}
                      <span class="el-item-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                      <div class="el-item">
                        <a href="" id="thumb-loader-spinner-svg{{ language.language_id }}" data-toggle="svg" class="img-thumbnail"><img width="100" height="100" src="{{ (thumb_loader_spinner_svg[language.language_id] is defined)?thumb_loader_spinner_svg[language.language_id]:placeholder_svg }}" alt="" title="" data-placeholder="{{ placeholder_svg }}" /></a><input type="hidden" name="style_loader_spinner_svg[{{ language.language_id }}]" value="{{ (style_loader_spinner_svg[language.language_id] is defined)?style_loader_spinner_svg[language.language_id]:'' }}" id="input-loader-spinner-svg{{ language.language_id }}" />
                      </div>
                    {% endfor %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        {# Device breakpoints #}
        <div class="panel mz-panel-default">
          <div class="panel-heading"><span data-toggle='tooltip' title='{{ help_breakpoints }}'>{{ text_breakpoints }} <i class='fa fa-question-circle'></i></span></div>
          <div class="panel-body">
            <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ help_emulator }}</div>
          {% for device, breakpoint in style_breakpoints %}
            <div class="form-group">
              <label class="col-xs-3 control-label" for="input-breakpoint-{{ device }}"><span data-toggle='tooltip' title='{{ _context['help_breakpoint_' ~ device] }}'>{{ _context['entry_breakpoint_' ~ device] }}</span></label>
              <div class="col-xs-9">
                <input class="form-control" id="input-breakpoint-{{ device }}" type="number" min="0" name="style_breakpoints[{{ device }}]" value="{{ style_breakpoints[device] }}" placeholder='{{ _context['entry_breakpoint_' ~ device] }}' {{ device == 'xs'?'readonly' }} />
              </div>
            </div>
          {% endfor %}
          </div>
        </div>
          
        {# container width #}
        <div class="panel mz-panel-default">
          <div class="panel-heading"><span data-toggle='tooltip' title='{{ help_container_width }}'>{{ text_container_width }} <i class='fa fa-question-circle'></i></span></div>
          <div class="panel-body">
          {% for device, container_width in style_container_width %}
            <div class="form-group">
              <label class="col-xs-3 control-label" for="input-container-width-{{ device }}"><span data-toggle='tooltip' title='{{ _context['help_breakpoint_' ~ device] }}'>{{ _context['entry_breakpoint_' ~ device] }}</span></label>
              <div class="col-xs-9">
                <input class="form-control" id="input-container-width-{{ device }}" type="number" min="0" name="style_container_width[{{ device }}]" value="{{ style_container_width[device] }}" placeholder='{{ _context['entry_container_width_' ~ device] }}' />
              </div>
            </div>
          {% endfor %}
          </div>
        </div>
      </div>
      
      <!--Color-->
      <div id="tab-mz-color" class="tab-pane fade">
          
        <!--Color palette-->
        <div class="panel mz-panel-default">
          <div class="panel-body">
            <div class="row">
              {% for color_palette in color_palettes %} 
                {% set checked = color_palette['code'] == style_color_palette?'checked':'' %} 
                <div class="col-xs-4">
                  <div class="color-palette {{ checked }}">
                    <label for="style-color-palette-{{ color_palette['code'] }}"><input type="radio" class="form-control" id="style-color-palette-{{ color_palette['code'] }}" name="style_color_palette" value="{{ color_palette['code'] }}" {{ checked }} /> {{ color_palette['name'] }}
                    <table><tr>
                      {% for color_type,color_code in color_palette['color'] %} 
                        <td class="{{ color_palette['code'] }}-color-{{ color_type }}" style="background-color: {{ color_code }}"></td>
                      {% endfor %} 
                    </tr></table> </label>
                  </div>
                </div>
              {% endfor %} 
            </div>
          </div>
        </div>
        
        <!--Custom color palette-->
        <div class="panel mz-panel-default">
          <div class="panel-heading">{{ text_custom_color_palette }}</div>
          <div class="panel-body">
            <div class="alert alert-info">{{ help_custom_color }}</div>
            {% for color_type in color_types %}
            <div class="form-group col-xs-6">
              <label class="col-xs-3 control-label" for="input-style-custom-color-{{ color_type }}">{{ color_type }}</label>
              <div class="col-xs-9">
                <div class="mz-colorpicker" data-color-badge=".custom-color-{{ color_type }}">
                  <input class="form-control" id="input-style-custom-color-{{ color_type }}" type="text" name="style_color_custom[{{ color_type }}]" value="{{ style_color_custom[color_type] }}" placeholder="{{ help_hexadecimal_color }}" /> 
                  <span class="mz-colorpicker-badge custom-color-{{ color_type }}"></span>
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
          
        <div class="panel mz-panel-default">
          <div class="panel-heading">{{ text_setting }}</div>
          <div class="panel-body">
            <div class="form-group">
              <label class="col-xs-3 control-label"><span data-toggle="tooltip" title="{{ help_min_contrast_ratio }}">{{ entry_min_contrast_ratio }}</span></label>
              <div class="col-xs-9">
                <div class="mz-switch-field">
                {% for value in list_min_contrast_ratio %} 
                  {% if (style_min_contrast_ratio == value) %} 
                  <input type="radio" name="style_min_contrast_ratio" value="{{ value }}" id="input-min-contrast-ratio-{{ value }}" checked>
                  <label for="input-min-contrast-ratio-{{ value }}" >{{ value }}</label>
                  {% else %} 
                  <input type="radio" name="style_min_contrast_ratio" value="{{ value }}" id="input-min-contrast-ratio-{{ value }}">
                  <label for="input-min-contrast-ratio-{{ value }}" >{{ value }}</label>
                  {% endif %} 
                {% endfor %} 
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- body -->
      <div id="tab-mz-body" class="tab-pane fade">
        <div class="panel mz-panel-default">
          <div class="panel-heading">{{ text_color }}</div>
          <div class="panel-body">
            {# Background color #}
            <div class="form-group">
              <label class="col-xs-3 control-label" for="input-body-bg">{{ entry_background }}</label>
              <div class="col-xs-9">
                <div class="mz-colorpicker">
                  <input class="form-control" id="input-body-bg" type="text" name="style_body_bg" value="{{ style_body_bg }}" placeholder="{{ help_hexadecimal_color }}" /> 
                  <span class="mz-colorpicker-badge"></span>
                </div>
              </div>
            </div>
                  
            {# color #}
            <div class="form-group">
              <label class="col-xs-3 control-label" for="input-body-color">{{ entry_text }}</label>
              <div class="col-xs-9">
                <div class="mz-colorpicker">
                  <input class="form-control" id="input-body-color" type="text" name="style_body_color" value="{{ style_body_color }}" placeholder="{{ help_hexadecimal_color }}" /> 
                  <span class="mz-colorpicker-badge"></span>
                </div>
              </div>
            </div>
          </div>
        </div>
          
        <!-- background -->
        <div class="panel mz-panel-default">
          <div class="panel-heading clearfix">
            <span class="pull-left">{{ text_background }}</span>
            <ul class="pull-right nav nav-tabs mz-nav-sandwich-tab">
              {% set round = 0 %}
              {% for layer_code,background_info in style_body_background %} 
               <li class="{{ round == 0?'active':constant('null') }}"><a href="#tab-{{ layer_code }}" data-toggle="tab">{{ _context['text_layer_' ~ (round + 1)] }}</a></li>
               {% set round = round + 1 %} 
              {% endfor %}
            </ul>
          </div>
          <div class="panel-body tab-content">
            {% set round = 0 %}
            {% for layer_code,background_info in style_body_background %} 
              <div id="tab-{{ layer_code }}" class="tab-pane fade {{ round == 0?'in active':constant('null') }}">
                  
                <!--Background status-->
                <div class="form-group">
                  <label class="col-xs-3 control-label" for="input-body-background-status-{{ layer_code }}">{{ entry_status }}</label>
                  <div class="col-xs-9">
                    <div class="mz-switch-field">
                      {% for status in body_background_status %} 
                        {% if (status['code'] == background_info['status']) %} 
                        <input type="radio" name="style_body_background[{{ layer_code }}][status]" value="{{ status['code'] }}" id="input-body-background-status-{{ layer_code ~ '-' ~ status['code'] }}" checked="">
                        <label class="mz-tab-toggle active" data-target="#tab-body-background-status-{{ layer_code ~ '-' ~ status['code'] }}" for="input-body-background-status-{{ layer_code ~ '-' ~ status['code'] }}" >{{ status['name'] }}</label>
                        {% else %} 
                        <input type="radio" name="style_body_background[{{ layer_code }}][status]" value="{{ status['code'] }}" id="input-body-background-status-{{ layer_code ~ '-' ~ status['code'] }}">
                        <label class="mz-tab-toggle" data-target="#tab-body-background-status-{{ layer_code ~ '-' ~ status['code'] }}" for="input-body-background-status-{{ layer_code ~ '-' ~ status['code'] }}" >{{ status['name'] }}</label>
                        {% endif %} 
                      {% endfor %} 
                    </div>
                  </div>
                </div>
                
                <div class="tab-content">
                  <div id='tab-body-background-status-{{ layer_code }}-none' class="tab-pane {{ background_info['status'] == 'none'?'active':constant('null') }}"></div>
                  <div id='tab-body-background-status-{{ layer_code }}-image' class="tab-pane {{ background_info['status'] == 'image'?'active':constant('null') }}">
                      <!--Background image-->
                      <div class="form-group">
                        <label class="col-xs-3 control-label" for="input-body-background-image-{{ layer_code }}">{{ entry_background_image }}</label>
                        <div class="col-xs-9">
                          <a href="" id="thumb-body-background-image-thumb-{{ layer_code }}" data-toggle="image" class="img-thumbnail">
                            <img src="{{ background_info['thumb'] }}" alt="" title="" data-placeholder="{{ placeholder }}" />
                          </a>
                          <input type="hidden" name="style_body_background[{{ layer_code }}][image]" value="{{ background_info['image'] }}" id="input-body-background-image-{{ layer_code }}" />
                        </div>
                      </div>
  
                      <!--Image position-->
                      <div class="form-group">
                        <label class="col-xs-3 control-label" for="input-body-background-image-position-{{ layer_code }}">{{ entry_image_position }}</label>
                        <div class="col-xs-9">
                          <select class="form-control" name="style_body_background[{{ layer_code }}][image_position]" id="input-body-background-image-position-{{ layer_code }}">
                            {% for position in background_image_positions %} 
                              {% if (position['code'] == background_info['image_position']) %} 
                              <option value="{{ position['code'] }}" selected="">{{ position['name'] }}</option>
                              {% else %} 
                              <option value="{{ position['code'] }}">{{ position['name'] }}</option>
                              {% endif %} 
                            {% endfor %} 
                          </select>
                        </div>
                      </div>
  
                      <!--Image repeat-->
                      <div class="form-group">
                        <label class="col-xs-3 control-label" for="input-body-background-image-repeat-{{ layer_code }}">{{ entry_image_repeat }}</label>
                        <div class="col-xs-9">
                          <select class="form-control" name="style_body_background[{{ layer_code }}][image_repeat]" id="input-body-background-image-repeat-{{ layer_code }}">
                            {% for repeat in background_image_repeats %} 
                              {% if (repeat['code'] == background_info['image_repeat']) %} 
                              <option value="{{ repeat['code'] }}" selected="">{{ repeat['name'] }}</option>
                              {% else %} 
                              <option value="{{ repeat['code'] }}">{{ repeat['name'] }}</option>
                              {% endif %} 
                            {% endfor %} 
                          </select>
                        </div>
                      </div>
  
                      <!--Image attachment-->
                      <div class="form-group">
                        <label class="col-xs-3 control-label" for="input-body-background-image-attachment-{{ layer_code }}">{{ entry_image_attachment }}</label>
                        <div class="col-xs-9">
                          <select class="form-control" name="style_body_background[{{ layer_code }}][image_attachment]" id="input-body-background-image-attachment-{{ layer_code }}">
                            {% for attachment in background_image_attachments %} 
                              {% if (attachment['code'] == background_info['image_attachment']) %} 
                              <option value="{{ attachment['code'] }}" selected="">{{ attachment['name'] }}</option>
                              {% else %} 
                              <option value="{{ attachment['code'] }}">{{ attachment['name'] }}</option>
                              {% endif %} 
                            {% endfor %} 
                          </select>
                        </div>
                      </div>
                  </div>
                  <div id='tab-body-background-status-{{ layer_code }}-pattern' class="tab-pane {{ background_info['status'] == 'pattern'?'active':constant('null') }}">
                    <!--overlay pattern-->
                      <div class="form-group">
                        <label class="col-xs-3 control-label" for="input-body-background-overlay-pattern-{{ layer_code }}">{{ entry_overlay_pattern }}</label>
                        <div class="col-xs-9">
                          <div class="mz-overlay-pattern">
                            <div class="col-xs-4">
                              <ul class="nav nav-tabs mz-nav-vertical-tube-tab">
                                {% for pattern in overlay_patterns %} 
                                  {% if (pattern['code'] == background_info['overlay_pattern']) %} 
                                  <li class="active"><label href="#tab-body-background-pattern-{{ layer_code }}-{{ pattern['code'] }}" for="input-body-background-pattern-{{ layer_code }}-{{ pattern['code'] }}" data-toggle="input-tab"><input type="radio" id="input-body-background-pattern-{{ layer_code }}-{{ pattern['code'] }}" name="style_body_background[{{ layer_code }}][overlay_pattern]" value="{{ pattern['code'] }}" class="hide" checked="" /><img src="{{ pattern['image'] }}" /> {{ pattern['name'] }}</label></li>
                                  {% else %} 
                                  <li><label href="#tab-body-background-pattern-{{ layer_code }}-{{ pattern['code'] }}" for="input-body-background-pattern-{{ layer_code }}-{{ pattern['code'] }}" data-toggle="input-tab"><input type="radio" id="input-body-background-pattern-{{ layer_code }}-{{ pattern['code'] }}" name="style_body_background[{{ layer_code }}][overlay_pattern]" value="{{ pattern['code'] }}" class="hide" /><img src="{{ pattern['image'] }}" />{{ pattern['name'] }}</label></li>
                                  {% endif %} 
                                {% endfor %} 
                              </ul>
                            </div>
                            <div class="col-xs-8">
                              <div class="tab-content">
                                {% for pattern in overlay_patterns %} 
                                  {% if (pattern['code'] == background_info['overlay_pattern']) %} 
                                  <div id="tab-body-background-pattern-{{ layer_code }}-{{ pattern['code'] }}" style="background-image: url({{ pattern['image'] }})" class="tab-pane fade in active"></div>
                                  {% else %} 
                                  <div id="tab-body-background-pattern-{{ layer_code }}-{{ pattern['code'] }}" style="background-image: url({{ pattern['image'] }})" class="tab-pane fade"></div>
                                  {% endif %} 
                                {% endfor %} 
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                  </div>
                </div>
                
              </div>
            {% set round = round + 1 %} 
            {% endfor %} 
          </div>
        </div>
        
      </div>
          
      <!-- global -->
      <div id="tab-mz-global" class="tab-pane fade">
        <div class="panel mz-panel-default">
          <div class="panel-body">
            {# Rounded #}
            <div class="form-group">
              <label class="col-xs-3 control-label" for="input-enable-rounded-status">{{ entry_rounded }}</label>
              <div class="col-xs-9">
                <div class="mz-switch-field">
                  {% if (style_enable_rounded) %} 
                  <input type="radio" name="style_enable_rounded" value="1" id="input-enable-rounded-enabled" checked>
                  <label for="input-enable-rounded-enabled">{{ text_enabled }}</label>
                  <input type="radio" name="style_enable_rounded" value="0" id="input-enable-rounded-disabled">
                  <label for="input-enable-rounded-disabled" >{{ text_disabled }}</label>
                  {% else %} 
                  <input type="radio" name="style_enable_rounded" value="1" id="input-enable-rounded-enabled" >
                  <label for="input-enable-rounded-enabled" >{{ text_enabled }}</label>
                  <input type="radio" name="style_enable_rounded" value="0" id="input-enable-rounded-disabled" checked>
                  <label for="input-enable-rounded-disabled">{{ text_disabled }}</label>
                  {% endif %} 
                </div>
              </div>
            </div>
                
            {# Shadows #}
            <div class="form-group">
              <label class="col-xs-3 control-label" for="input-enable-shadows-status">{{ entry_shadows }}</label>
              <div class="col-xs-9">
                <div class="mz-switch-field">
                  {% if (style_enable_shadows) %} 
                  <input type="radio" name="style_enable_shadows" value="1" id="input-enable-shadows-enabled" checked>
                  <label for="input-enable-shadows-enabled">{{ text_enabled }}</label>
                  <input type="radio" name="style_enable_shadows" value="0" id="input-enable-shadows-disabled">
                  <label for="input-enable-shadows-disabled" >{{ text_disabled }}</label>
                  {% else %} 
                  <input type="radio" name="style_enable_shadows" value="1" id="input-enable-shadows-enabled" >
                  <label for="input-enable-shadows-enabled" >{{ text_enabled }}</label>
                  <input type="radio" name="style_enable_shadows" value="0" id="input-enable-shadows-disabled" checked>
                  <label for="input-enable-shadows-disabled">{{ text_disabled }}</label>
                  {% endif %} 
                </div>
              </div>
            </div>
                
            {# Gradients #}
            <div class="form-group">
              <label class="col-xs-3 control-label" for="input-enable-gradients-status">{{ entry_gradients }}</label>
              <div class="col-xs-9">
                <div class="mz-switch-field">
                  {% if (style_enable_gradients) %} 
                  <input type="radio" name="style_enable_gradients" value="1" id="input-enable-gradients-enabled" checked>
                  <label for="input-enable-gradients-enabled">{{ text_enabled }}</label>
                  <input type="radio" name="style_enable_gradients" value="0" id="input-enable-gradients-disabled">
                  <label for="input-enable-gradients-disabled" >{{ text_disabled }}</label>
                  {% else %} 
                  <input type="radio" name="style_enable_gradients" value="1" id="input-enable-gradients-enabled" >
                  <label for="input-enable-gradients-enabled" >{{ text_enabled }}</label>
                  <input type="radio" name="style_enable_gradients" value="0" id="input-enable-gradients-disabled" checked>
                  <label for="input-enable-gradients-disabled">{{ text_disabled }}</label>
                  {% endif %} 
                </div>
              </div>
            </div>
              
            {# Spacer #}
            <div class="form-group">
              <label class="col-xs-3 control-label" for="input-spacer">{{ entry_spacer }}</label>
              <div class="col-xs-9">
                <input class="form-control" id="input-spacer" type="text" name="style_spacer" value="{{ style_spacer }}" placeholder="1rem" />
              </div>
            </div>
              
            {# Horizontal line #}
