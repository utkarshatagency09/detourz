    // Highlight color palette
    $('input[name="style_color_palette"]').change(function(e){
        $('.color-palette').removeClass('checked');
        $(e.target).parents('.color-palette').addClass('checked');
    });
      
    // Add and delete google font
    $('#button-google-font-add').on('click', function(){
            var url = "index.php?route=extension/maza/asset/google_font&user_token={{ user_token }}&action=add";

            var error = false;
            $('#tab-google-font-add .error').remove();
            var data = {};

            var input_google_font_name =  $('#input-google-font-name').val();
            if(input_google_font_name){
                data['name'] = $('#input-google-font-name').val();
            } else{
                $('#input-google-font-name').after("<div class='error text-danger'>{{ error_required }}</div>");
                error = true;
            }

            var input_google_font_family =  $('#input-google-font-family').val();
            if(input_google_font_family){
                data['font_family'] = $('#input-google-font-family').val();
            } else{
                $('#input-google-font-family').after("<div class='error text-danger'>{{ error_required }}</div>");
                error = true;
            }

            var input_google_font_url =  $('#input-google-font-url').val();
            if(input_google_font_url){
                data['url'] = $('#input-google-font-url').val();
            } else{
                $('#input-google-font-url').after("<div class='error text-danger'>{{ error_required }}</div>");
                error = true;
            }
            
            data['parent_font_id'] = $('#input-google-parent-font').val();

            if(error) return;
            
            $(this).button('loading');
            
            $.post(url, data, function(json){
                $('#tab-google-font-add .alert').remove();

                if(json['success']){
                    $('#table-google-font-list tbody').append('<tr id="row-google-font-' + json['font_id'] + '"><td>'
                            + data.name + '</td><td>' + data.font_family + '</td><td>' + data.url + '</td><td>' + $('#input-google-parent-font option:selected').text() + '</td><td>' +
                            '<button type="button" id="button-delete-google-font-' + json['font_id'] + '" class="btn btn-danger btn-xs" onclick="deleteGoogleFont(' + json['font_id'] + ')"><i class="fa fa-trash-o" aria-hidden="true"></i></button>'
                            + '</td></tr>');
                    $('select[id^="input-font-family"]').append('<option value="' + json['font_id'] + '">' + data.name + '</option>');
                    $('#tab-google-font-add').prepend('<div class="alert alert-success alert-dismissible"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> ' + json['success'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
                }
                if(json['error']){
                    $('#tab-google-font-add').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> ' + json['error'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
                }
                
                $('#button-google-font-add').button('reset');
            }, 'json');
    });
    
    // delete google font
    function deleteGoogleFont(font_id){
            var url = "index.php?route=extension/maza/asset/google_font&user_token={{ user_token }}&action=delete&font_id=" + font_id;
            
            $('#button-delete-google-font-' + font_id).html('<i class="fa fa-circle-o-notch fa-spin fa-fw"></i>');
            
            $.get(url, null, function(json){
                $('#tab-google-font-list .alert').remove();

                if(json['success']){
                    $('#row-google-font-' + font_id).remove();
                    $('#tab-google-font-list').prepend('<div class="alert alert-success alert-dismissible"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> ' + json['success'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
                }
                if(json['error']){
                    $('#tab-google-font-list').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> ' + json['error'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
                }
                
                $('#button-delete-google-font-' + font_id).html('<i class="fa fa-trash-o" aria-hidden="true"></i>');
            }, 'json');
    }
