<!-- Form -->
<form id="setting-content-form" class="form-horizontal" enctype="multipart/form-data" method="post">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#content-options-general" data-toggle="tab">{{ tab_general }}</a></li>
    <li><a href="#content-options-column" data-toggle="tab">{{ tab_column }}</a></li>
  </ul>
  <div class="tab-content">
    <div id="content-options-general" class="active tab-pane">
      <!--content status-->
      <div class="form-group">
        <label class="col-sm-3 control-label" for="input-setting-content-status">{{ entry_status }}</label>
        <div class="col-sm-9">
          <div class="mz-switch-field">
            {% if (content_status) %} 
            <input type="radio" name="content_status" value="1" id="input-setting-content-status-enabled" checked>
            <label for="input-setting-content-status-enabled" >{{ text_enabled }}</label>
            <input type="radio" name="content_status" value="0" id="input-setting-content-status-disabled">
            <label for="input-setting-content-status-disabled">{{ text_disabled }}</label>
            {% else %} 
            <input type="radio" name="content_status" value="1" id="input-setting-content-status-enabled" >
            <label for="input-setting-content-status-enabled">{{ text_enabled }}</label>
            <input type="radio" name="content_status" value="0" id="input-setting-content-status-disabled" checked>
            <label for="input-setting-content-status-disabled" >{{ text_disabled }}</label>
            {% endif %} 
          </div>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label" for="input-setting-content-option-name">{{ entry_option_name }}</label>
        <div class="col-sm-9">
          <div class="mz-switch-field">
            {% if (content_option_name) %} 
            <input type="radio" name="content_option_name" value="1" id="input-setting-content-option-name-enabled" checked>
            <label for="input-setting-content-option-name-enabled" >{{ text_enabled }}</label>
            <input type="radio" name="content_option_name" value="0" id="input-setting-content-option-name-disabled">
            <label for="input-setting-content-option-name-disabled">{{ text_disabled }}</label>
            {% else %} 
            <input type="radio" name="content_option_name" value="1" id="input-setting-content-option-name-enabled" >
            <label for="input-setting-content-option-name-enabled">{{ text_enabled }}</label>
            <input type="radio" name="content_option_name" value="0" id="input-setting-content-option-name-disabled" checked>
            <label for="input-setting-content-option-name-disabled" >{{ text_disabled }}</label>
            {% endif %} 
          </div>
        </div>
      </div>

      <div class="form-group">
        <label class="col-xs-3 control-label">{{ entry_radio_style }}</label>
        <div class="col-xs-9">
          <div class="mz-switch-field">
            {% for option_style in option_styles %} 
              {% if (content_radio_style == option_style['code']) %} 
              <input type="radio" name="content_radio_style" value="{{ option_style['code'] }}" id="input-setting-content-radio-style-{{ option_style['code'] }}" checked>
              <label for="input-setting-content-radio-style-{{ option_style['code'] }}" >{{ option_style['text'] }}</label>
              {% else %} 
              <input type="radio" name="content_radio_style" value="{{ option_style['code'] }}" id="input-setting-content-radio-style-{{ option_style['code'] }}">
              <label for="input-setting-content-radio-style-{{ option_style['code'] }}" >{{ option_style['text'] }}</label>
              {% endif %} 
            {% endfor %} 
          </div>
        </div>
      </div>

      <div class="form-group">
        <label class="col-xs-3 control-label">{{ entry_checkbox_style }}</label>
        <div class="col-xs-9">
          <div class="mz-switch-field">
            {% for option_style in option_styles %} 
              {% if (content_checkbox_style == option_style['code']) %} 
              <input type="radio" name="content_checkbox_style" value="{{ option_style['code'] }}" id="input-setting-content-checkbox-style-{{ option_style['code'] }}" checked>
              <label for="input-setting-content-checkbox-style-{{ option_style['code'] }}" >{{ option_style['text'] }}</label>
              {% else %} 
              <input type="radio" name="content_checkbox_style" value="{{ option_style['code'] }}" id="input-setting-content-checkbox-style-{{ option_style['code'] }}">
              <label for="input-setting-content-checkbox-style-{{ option_style['code'] }}" >{{ option_style['text'] }}</label>
              {% endif %} 
            {% endfor %} 
          </div>
        </div>
      </div>
    </div>
    <div id="content-options-column" class="tab-pane">
      <div class="form-group">
        <label class="col-xs-3 control-label" for="input-content-column-xl"><span data-toggle="tooltip" title="{{ help_column_xl }}">{{ entry_column_xl }}</span></label>
        <div class="col-xs-5">
          <div class="input-group">
            <input type="range" name="content_column_xl" min="1" max="4" value="{{ content_column_xl }}" id="input-content-column-xl" class="form-control" />
            <span class="input-group-addon">{{ content_column_xl }}</span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label class="col-xs-3 control-label" for="input-content-column-lg"><span data-toggle="tooltip" title="{{ help_column_lg }}">{{ entry_column_lg }}</span></label>
        <div class="col-xs-5">
          <div class="input-group">
            <input type="range" name="content_column_lg" min="1" max="4" value="{{ content_column_lg }}" id="input-content-column-lg" class="form-control" />
            <span class="input-group-addon">{{ content_column_lg }}</span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label class="col-xs-3 control-label" for="input-content-column-md"><span data-toggle="tooltip" title="{{ help_column_md }}">{{ entry_column_md }}</span></label>
        <div class="col-xs-5">
          <div class="input-group">
            <input type="range" name="content_column_md" min="1" max="4" value="{{ content_column_md }}" id="input-content-column-md" class="form-control" />
            <span class="input-group-addon">{{ content_column_md }}</span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label class="col-xs-3 control-label" for="input-content-column-sm"><span data-toggle="tooltip" title="{{ help_column_sm }}">{{ entry_column_sm }}</span></label>
        <div class="col-xs-5">
          <div class="input-group">
            <input type="range" name="content_column_sm" min="1" max="4" value="{{ content_column_sm }}" id="input-content-column-sm" class="form-control" />
            <span class="input-group-addon">{{ content_column_sm }}</span>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label class="col-xs-3 control-label" for="input-content-column-xs"><span data-toggle="tooltip" title="{{ help_column_xs }}">{{ entry_column_xs }}</span></label>
        <div class="col-xs-5">
          <div class="input-group">
            <input type="range" name="content_column_xs" min="1" max="4" value="{{ content_column_xs }}" id="input-content-column-xs" class="form-control" />
            <span class="input-group-addon">{{ content_column_xs }}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
<script>
$('input[type="range"]').on('input change', function(){
    $(this).siblings('.input-group-addon').text($(this).val());
});
</script>
</form>