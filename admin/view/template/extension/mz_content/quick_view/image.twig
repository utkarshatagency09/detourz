<!-- Form -->
<form id="setting-content-form" class="form-horizontal" enctype="multipart/form-data" method="post">
  <!--content status-->
  <div class="form-group">
    <label class="col-sm-3 control-label" for="input-setting-content-status">{{ entry_status }}</label>
    <div class="col-sm-9">
      <div class="mz-switch-field">
        {% if (content_status) %} 
        <input type="radio" name="content_status" value="1" id="input-setting-content-status-enabled" checked>
        <label for="input-setting-content-status-enabled" >{{ text_enabled }}</label>
        <input type="radio" name="content_status" value="0" id="input-setting-content-status-disabled">
        <label for="input-setting-content-status-disabled">{{ text_disabled }}</label>
        {% else %} 
        <input type="radio" name="content_status" value="1" id="input-setting-content-status-enabled" >
        <label for="input-setting-content-status-enabled">{{ text_enabled }}</label>
        <input type="radio" name="content_status" value="0" id="input-setting-content-status-disabled" checked>
        <label for="input-setting-content-status-disabled" >{{ text_disabled }}</label>
        {% endif %} 
      </div>
    </div>
  </div>
      
  <!-- additional Image position -->
  <div class="form-group">
    <label class="col-xs-3 control-label" for="input-additional-image-position">{{ entry_additional_image_position }}</label>
    <div class="col-xs-9">
      <div class="mz-switch-field">
        {% for additional_image_position in additional_image_positions %} 
          {% if (content_additional_image_position == additional_image_position['code']) %} 
          <input type="radio" name="content_additional_image_position" value="{{ additional_image_position['code'] }}" id="input-additional-image-position-{{ additional_image_position['code'] }}" checked>
          <label for="input-additional-image-position-{{ additional_image_position['code'] }}" >{{ additional_image_position['text'] }}</label>
          {% else %} 
          <input type="radio" name="content_additional_image_position" value="{{ additional_image_position['code'] }}" id="input-additional-image-position-{{ additional_image_position['code'] }}">
          <label for="input-additional-image-position-{{ additional_image_position['code'] }}" >{{ additional_image_position['text'] }}</label>
          {% endif %} 
        {% endfor %} 
      </div>
    </div>
  </div>
</form>