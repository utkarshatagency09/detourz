      </div>
          
      <!--content compare-->
      <div class="form-group">
        <label class="col-sm-3 control-label" for="input-setting-content-compare">{{ entry_compare }}</label>
        <div class="col-sm-9">
          <div class="mz-switch-field">
            {% if (content_compare) %} 
            <input type="radio" name="content_compare" value="1" id="input-content-compare-enabled" checked>
            <label for="input-content-compare-enabled" >{{ text_enabled }}</label>
