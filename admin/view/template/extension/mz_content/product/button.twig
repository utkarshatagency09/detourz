<!-- Form -->
<form id="setting-content-form" class="form-horizontal" enctype="multipart/form-data" method="post">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#content-button-general" data-toggle="tab">{{ tab_general }}</a></li>
    <li><a href="#content-button-button" data-toggle="tab">{{ tab_button }}</a></li>
    <li><a href="#content-button-design" data-toggle="tab">{{ tab_design }}</a></li>
  </ul>
  <div class="tab-content">
    <div id="content-button-general" class="active tab-pane">
      <!--content status-->
      <div class="form-group">
        <label class="col-sm-3 control-label" for="input-setting-content-status">{{ entry_status }}</label>
        <div class="col-sm-9">
          <div class="mz-switch-field">
            {% if (content_status) %} 
            <input type="radio" name="content_status" value="1" id="input-content-status-enabled" checked>
            <label for="input-content-status-enabled" >{{ text_enabled }}</label>
            <input type="radio" name="content_status" value="0" id="input-content-status-disabled">
            <label for="input-content-status-disabled">{{ text_disabled }}</label>
            {% else %} 
            <input type="radio" name="content_status" value="1" id="input-content-status-enabled" >
            <label for="input-content-status-enabled">{{ text_enabled }}</label>
            <input type="radio" name="content_status" value="0" id="input-content-status-disabled" checked>
            <label for="input-content-status-disabled" >{{ text_disabled }}</label>
            {% endif %} 
          </div>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label"><span data-toggle="tooltip" title="{{ help_stock_status }}">{{ entry_stock_status }}</span></label>
        <div class="col-sm-9">
          <div class="mz-switch-field">
            {% if (content_stock_status) %} 
            <input type="radio" name="content_stock_status" value="1" id="input-content-stock-status-enabled" checked>
            <label for="input-content-stock-status-enabled" >{{ text_enabled }}</label>
            <input type="radio" name="content_stock_status" value="0" id="input-content-stock-status-disabled">
            <label for="input-content-stock-status-disabled">{{ text_disabled }}</label>
            {% else %} 
            <input type="radio" name="content_stock_status" value="1" id="input-content-stock-status-enabled" >
            <label for="input-content-stock-status-enabled">{{ text_enabled }}</label>
            <input type="radio" name="content_stock_status" value="0" id="input-content-stock-status-disabled" checked>
            <label for="input-content-stock-status-disabled" >{{ text_disabled }}</label>
            {% endif %} 
          </div>
        </div>
      </div>
    </div>

