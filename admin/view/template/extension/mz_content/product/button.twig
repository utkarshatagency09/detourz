            <label for="input-content-compare-disabled" >{{ text_disabled }}</label>
            {% endif %} 
          </div>
        </div>
      </div>
    </div>
    
    <div id="content-button-design" class="tab-pane">
      <div class="form-group">
        <label class="col-xs-3 control-label">{{ entry_show }}</label>
        <div class="col-xs-9">
          <div class="mz-switch-field">
            {% for show in list_show %} 
              {% if (content_show == show['code']) %} 
              <input type="radio" name="content_show" value="{{ show['code'] }}" id="input-setting-content-show-{{ show['code'] }}" checked>
              <label for="input-setting-content-show-{{ show['code'] }}" >{{ show['text'] }}</label>
              {% else %} 
              <input type="radio" name="content_show" value="{{ show['code'] }}" id="input-setting-content-show-{{ show['code'] }}">
              <label for="input-setting-content-show-{{ show['code'] }}" >{{ show['text'] }}</label>
              {% endif %} 
            {% endfor %} 
          </div>
        </div>
      </div>
          
      <div class="form-group">
        <label class="col-xs-3 control-label" for="input-setting-content-color">{{ entry_color }}</label>
        <div class="col-xs-9">
          <select name="content_color" id="input-setting-content-color" class="form-control">
            <option value="default">{{ text_default }}</option>
            {% for color in colors %} 
              {% if (content_color == color['code']) %}
              <option value="{{ color['code'] }}" selected="">{{ color['text'] }}</option>
              {% else %} 
              <option value="{{ color['code'] }}">{{ color['text'] }}</option>
              {% endif %} 
            {% endfor %} 
          </select>
        </div>
      </div>
          
      <div class="form-group">
        <label class="col-sm-3 control-label" for="input-setting-content-outline">{{ entry_outline }}</label>
