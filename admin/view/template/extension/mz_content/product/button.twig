            {% endif %} 
          </div>
        </div>
      </div>
          
      <div class="form-group">
        <label class="col-xs-3 control-label">{{ entry_size }}</label>
        <div class="col-xs-9">
          <div class="mz-switch-field">
            {% for size in button_sizes %} 
              {% if (content_size == size['code']) %} 
              <input type="radio" name="content_size" value="{{ size['code'] }}" id="input-setting-content-size-{{ size['code'] }}" checked>
              <label for="input-setting-content-size-{{ size['code'] }}" >{{ size['text'] }}</label>
              {% else %} 
              <input type="radio" name="content_size" value="{{ size['code'] }}" id="input-setting-content-size-{{ size['code'] }}">
              <label for="input-setting-content-size-{{ size['code'] }}" >{{ size['text'] }}</label>
