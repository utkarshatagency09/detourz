            <label for="input-widget-control-maptype-enabled">{{ text_enabled }}</label>
            <input type="radio" name="widget_control_maptype" value="0" id="input-widget-control-maptype-disabled" checked>
            <label for="input-widget-control-maptype-disabled" >{{ text_disabled }}</label>
            {% endif %} 
          </div>
        </div>
      </div>
      <div class="form-group">
        <label class="col-xs-3 control-label" for="input-widget-control-scale">{{ entry_scale }}</label>
        <div class="col-xs-9">
          <div class="mz-switch-field">
            {% if (widget_control_scale) %} 
            <input type="radio" name="widget_control_scale" value="1" id="input-widget-control-scale-enabled" checked>
