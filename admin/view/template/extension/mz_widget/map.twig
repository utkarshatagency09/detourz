            <label for="input-widget-control-streetview-enabled">{{ text_enabled }}</label>
            <input type="radio" name="widget_control_streetview" value="0" id="input-widget-control-streetview-disabled" checked>
            <label for="input-widget-control-streetview-disabled" >{{ text_disabled }}</label>
            {% endif %} 
          </div>
        </div>
      </div>
      <div class="form-group">
        <label class="col-xs-3 control-label" for="input-widget-control-rotate">{{ entry_rotate }}</label>
        <div class="col-xs-9">
          <div class="mz-switch-field">
            {% if (widget_control_rotate) %} 
