<!-- Form -->
<form id="setting-design-form" class="form-horizontal" enctype="multipart/form-data" method="post">
  <ul class="nav nav-tabs">
    <li class="active"><a href="#tab-design-general" data-toggle="tab">{{ tab_general }}</a></li>
    <li><a href="#tab-design-caption" data-toggle="tab">{{ tab_caption }}</a></li>
  </ul>
  <div class="tab-content">
    <div id="tab-design-general" class="tab-pane active">
      <!--design status-->
      <div class="form-group">
        <label class="col-sm-3 control-label" for="input-setting-design-status">{{ entry_status }}</label>
        <div class="col-sm-9">
          <div class="mz-switch-field">
            {% if (design_status) %} 
            <input type="radio" name="design_status" value="1" id="input-design-status-enabled" checked>
            <label for="input-design-status-enabled" >{{ text_enabled }}</label>
            <input type="radio" name="design_status" value="0" id="input-design-status-disabled">
            <label for="input-design-status-disabled">{{ text_disabled }}</label>
            {% else %} 
            <input type="radio" name="design_status" value="1" id="input-design-status-enabled" >
            <label for="input-design-status-enabled">{{ text_enabled }}</label>
            <input type="radio" name="design_status" value="0" id="input-design-status-disabled" checked>
            <label for="input-design-status-disabled" >{{ text_disabled }}</label>
            {% endif %} 
          </div>
        </div>
      </div>
      
      {# Parallax image #}
      <div class="form-group">
        <label class="col-xs-3 control-label" >{{ entry_parallax_image }}</label>
        <div class="col-xs-9">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-design-parallax-image" data-meta="image" data-toggle="tab">{{ tab_image }}</a></li>
            <li><a href="#tab-design-parallax-svg" data-meta="image" data-toggle="tab">{{ tab_svg }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-design-parallax-image">
              <div class="el-group">
              {% for language in languages %}
                <span class="el-item-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                <div class="el-item">
                  <a href="" id="thumb-setting-design-parallax-image{{ language.language_id }}" data-toggle="image" class="img-thumbnail"><img src="{{ (thumb_parallax_image[language.language_id] is defined)?thumb_parallax_image[language.language_id]:placeholder_image }}" alt="" title="" data-placeholder="{{ placeholder_image }}" /></a><input type="hidden" name="design_parallax_image[{{ language.language_id }}]" value="{{ (design_parallax_image[language.language_id] is defined)?design_parallax_image[language.language_id]:'' }}" id="input-setting-design-parallax-image{{ language.language_id }}" />
                </div>
              {% endfor %}
              </div>
            </div>
            <div class="tab-pane" id="tab-design-parallax-svg">
              <div class="el-group">
              {% for language in languages %}
                <span class="el-item-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /></span>
                <div class="el-item">
                  <a href="" id="thumb-setting-design-parallax-svg{{ language.language_id }}" data-toggle="svg" class="img-thumbnail"><img width="100" height="100" src="{{ (thumb_parallax_svg[language.language_id] is defined)?thumb_parallax_svg[language.language_id]:placeholder_svg }}" alt="" title="" data-placeholder="{{ placeholder_svg }}" /></a><input type="hidden" name="design_parallax_svg[{{ language.language_id }}]" value="{{ (design_parallax_svg[language.language_id] is defined)?design_parallax_svg[language.language_id]:'' }}" id="input-setting-design-parallax-svg{{ language.language_id }}" />
                </div>
              {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>
              
      <!--parallax height-->
      <div class="form-group">
        <label class="col-xs-3 control-label" for="input-setting-design-parallax-height">{{ entry_parallax_height }}</label>
        <div class="col-xs-9">
          <input type="number" min="0" name="design_parallax_height" value="{{ design_parallax_height }}" placeholder="{{ entry_parallax_height }}" class="form-control" id="input-setting-design-parallax-height" />
        </div>
      </div>
    </div>
          
    <!-- Caption -->
    <div id="tab-design-caption" class="tab-pane">
      <div class="form-group">
        <label class="col-xs-3 control-label" >{{ entry_caption }}</label>
        <div class="col-xs-9">
          <ul class="nav nav-tabs tab-dynamic" id="setting-design-parallax-caption">
            {% for language in languages %}
            <li><a href="#design-parallax-caption-language-{{ language.language_id }}" data-toggle="tab"><img src="language/{{ language.code }}/{{ language.code }}.png" title="{{ language.name }}" /> {{ language.name }}</a></li>
            {% endfor %}
          </ul>
          <div class="tab-content">
            {% for language in languages %}
            <div class="tab-pane" id="design-parallax-caption-language-{{ language.language_id }}">
              <textarea name="design_parallax_caption[{{ language.language_id }}]" placeholder="{{ entry_caption }}" id="input-design-parallax-caption{{ language.language_id }}" data-ckeditor="{{ code }}" class="form-control">{{ design_parallax_caption[language.language_id] ? design_parallax_caption[language.language_id] }}</textarea>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
    
  </div>
</form>
<script src="view/javascript/maza/ckeditor/ckeditor.js"></script>