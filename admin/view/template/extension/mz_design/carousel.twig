var slide_key = {{ slide_key }};

// add tabs
$('#button-design-add-slide').on('click', function(){
    // increase key value by one
    slide_key = slide_key + 1;
    
    // Add tab
    $('#design-tab-slide').append(getTabHTML(slide_key));
    
    // Add tab content
    $('#design-tab-slide-content').append(getTabContentHTML(slide_key));
    
    // Initilalise tab javascript
    initTabContent($('#design-tab-slide-' + slide_key));
    
    // Active tab in case of only one tab available
    if($('#design-tab-slide li').length == 1){
        $('#design-tab-slide a:first').tab('show');
    }
});

// Remove tab
$('#button-design-remove-slide').on('click', function(){
    $('#design-tab-slide>.active, #design-tab-slide-content>.tab-pane.active').remove();
    $('#design-tab-slide a:first').tab('show');
});

// initialise all tab content
initTabContent('#design-tab-slide-content');

/**
 * initialise Javascript to tab content
 * @param {String} tab_content tab content selector
 * */
function initTabContent(tab_content){
    InitJsGlobal(tab_content);
    
    // Tooltip
    $(tab_content).find('[data-toggle="tooltip"]').tooltip();
}     
