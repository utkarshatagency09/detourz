            <label for="input-design-pagination-enabled" >{{ text_enabled }}</label>
            <input type="radio" name="design_pagination" value="0" id="input-design-pagination-disabled">
            <label for="input-design-pagination-disabled">{{ text_disabled }}</label>
            {% else %} 
