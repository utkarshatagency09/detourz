{% verbatim %}{% if products %}{% endverbatim %}
<div class="row row-cols-xl-{{ product_column_xl }} row-cols-lg-{{ product_column_lg }} row-cols-md-{{ product_column_md }} row-cols-sm-{{ product_column_sm }} row-cols-{{ product_column_xs }} grid-view {{ not description_status?'no-desc' }}" data-grid="row row-cols-xl-{{ product_column_xl }} row-cols-lg-{{ product_column_lg }} row-cols-md-{{ product_column_md }} row-cols-sm-{{ product_column_sm }} row-cols-{{ product_column_xs }} grid-view {{ not description_status?'no-desc' }}" data-list="row row-cols-1 list-view" data-default_view="{{ list_grid }}" data-view_id="{{ list_grid }}">
  {% verbatim %}{% for product_key, product in products %}{% endverbatim %}
  {% include 'mz_poco/template/product/common/product.twig' %}
  {% verbatim %}{% endfor %}{% endverbatim %}
</div>
{% verbatim %}{% else %}
<p>{{ text_empty }}</p>
<div class="buttons clearfix mb-3">
  <div class="float-end"><a id="button-continue" href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
</div>
{% endif %}{% endverbatim %}
