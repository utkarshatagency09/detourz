    <a class="nav-link{% verbatim %}{% if not key %} active{% endif %}{% endverbatim %}" data-bs-toggle="tab" href="#attribute-tab-pane-{{ mz_suffix }}-{% verbatim %}{{ key }}{% endverbatim %}" role="tab">{% verbatim %}{{ attribute_group.name }}{% endverbatim %}</a>
