{# Table #}
{% if design == 'table' %}
<div class="table-responsive">
  <table class="table table-{{ size }} {{ table_striped?'table-striped ' }}{{ table_dark?'table-dark ' }}{{ table_bordered?'table-bordered ' }}{{ table_borderless?'table-borderless ' }}{{ table_hover?'table-hover' }}">
    {% verbatim %}{% for attribute_group in attribute_groups %}{% endverbatim %}
    <thead class="table-{{ table_head }}">
      <tr>
        <th colspan="2"><strong>{% verbatim %}{{ attribute_group.name }}{% endverbatim %}</strong></th>
      </tr>
    </thead>
    <tbody>
    {% verbatim %}{% for attribute in attribute_group.attribute %}{% endverbatim %}
      <tr>
        <td>{% verbatim %}{{ attribute.name }}{% endverbatim %}</td>
        <td>{% verbatim %}{{ attribute.text }}{% endverbatim %}</td>
      </tr>
    {% verbatim %}{% endfor %}{% endverbatim %}
    </tbody>
    {% verbatim %}{% endfor %}{% endverbatim %}
  </table>
</div>
{% endif %}

