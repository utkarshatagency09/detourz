{{ header }}
<div id="account-account" class="container content">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      {% for breadcrumb in breadcrumbs|slice(0,-1) %}
        <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
      <li class="breadcrumb-item active" aria-current="page">{{ breadcrumbs|last.text }}</li>
    </ol>
  </nav>
  {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fas fa-check-circle"></i> {{ success }}</div>
  {% endif %}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
      {% set class = 'col-md-6' %}
    {% elseif column_left or column_right %}
      {% set class = 'col-md-9' %}
    {% else %}
      {% set class = 'col-md-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <div class="card mb-3">
        <h2 class="card-header h5">{{ text_my_account }}</h2>
        <div class="card-body text-center">
          <div class="row row-cols-2 row-cols-sm-3 row-cols-lg-5">
            <div class="col"><a class="d-inline-flex text-decoration-none text-reset flex-column my-3" href="{{ edit }}"><i class="fas fa-2x mb-1 fa-user-edit"></i> {{ text_edit }}</a></div>
            <div class="col"><a class="d-inline-flex text-decoration-none text-reset flex-column my-3" href="{{ password }}"><i class="fas fa-2x mb-1 fa-key"></i> {{ text_password }}</a></div>
            <div class="col"><a class="d-inline-flex text-decoration-none text-reset flex-column my-3" href="{{ address }}"><i class="fas fa-2x mb-1 fa-address-card"></i> {{ text_address }}</a></div>
            <div class="col"><a class="d-inline-flex text-decoration-none text-reset flex-column my-3" href="{{ wishlist }}"><i class="far fa-2x mb-1 fa-grin-hearts"></i> {{ text_wishlist }}</a></div>
            <div class="col"><a class="d-inline-flex text-decoration-none text-reset flex-column my-3" href="{{ newsletter }}"><i class="fas fa-2x mb-1 fa-envelope-open-text"></i> {{ text_newsletter }}</a></div>
          </div>
        </div>
      </div>
      {% if credit_cards %}
        <div class="card mb-3">
          <h2 class="card-header h5">{{ text_credit_card }}</h2>
          <div class="card-body">
            {% for credit_card in credit_cards %}
              <a class="d-inline-flex text-decoration-none text-reset flex-column m-3" href="{{ credit_card.href }}"><i class="fas fa-2x mb-1 fa-credit-card"></i> {{ credit_card.name }}</a>
            {% endfor %}
          </div>
        </div>
      {% endif %}
      <div class="card mb-3">
        <h2 class="card-header h5">{{ text_my_orders }}</h2>
        <div class="card-body text-center">
          {% if reward %}
          {% set class = 'row-cols-lg-6' %}
          {% else %}
          {% set class = 'row-cols-lg-5' %}
          {% endif %}
          <div class="row row-cols-2 row-cols-sm-3 {{ class }}">
            <div class="col"><a class="d-inline-flex text-decoration-none text-reset flex-column my-3" href="{{ order }}"><i class="fas fa-2x mb-1 fa-box-open"></i> {{ text_order }}</a></div>
            {% if mz_config.get('catalog_account_download_status') %}
              <div class="col"><a class="d-inline-flex text-decoration-none text-reset flex-column my-3" href="{{ download }}"><i class="fas fa-2x mb-1 fa-download"></i> {{ text_download }}</a></div>
            {% endif %}
            {% if mz_config.get('catalog_account_reward_status') and reward %}
              <div class="col"><a class="d-inline-flex text-decoration-none text-reset flex-column my-3" href="{{ reward }}"><i class="fas fa-2x mb-1 fa-medal"></i> {{ text_reward }}</a></div>
            {% endif %}
            {% if mz_config.get('catalog_account_return_status') %}
            <div class="col"><a class="d-inline-flex text-decoration-none text-reset flex-column my-3" href="{{ return }}"><i class="fas fa-2x mb-1 fa-undo"></i> {{ text_return }}</a></div>
            {% endif %}
            <div class="col"><a class="d-inline-flex text-decoration-none text-reset flex-column my-3" href="{{ transaction }}"><i class="fas fa-2x mb-1 fa-exchange-alt"></i> {{ text_transaction }}</a></div>
            {% if mz_config.get('catalog_account_recurring_status') %}
            <div class="col"><a class="d-inline-flex text-decoration-none text-reset flex-column my-3" href="{{ recurring }}"><i class="fas fa-2x mb-1 fa-money-check"></i> {{ text_recurring }}</a></div>
            {% endif %}
          </div>
        </div>
      </div>
      {% if mz_config.get('catalog_account_affiliate_status') and (affiliate or tracking) %}
      <div class="card mb-3">
        <h2 class="card-header h5">{{ text_my_affiliate }}</h2>
        <div class="card-body text-center text-sm-start">
          {% if not tracking %}
          <a class="d-inline-flex text-decoration-none text-reset flex-column m-3" href="{{ affiliate }}"><i class="fas fa-2x mb-1 fa-bullhorn"></i> {{ text_affiliate_add }}</a>
          {% else %}
            <a class="d-inline-flex text-decoration-none text-reset flex-column m-3" href="{{ affiliate }}"><i class="fas fa-2x mb-1 fa-bullhorn"></i> {{ text_affiliate_edit }}</a>
            <a class="d-inline-flex text-decoration-none text-reset flex-column m-3" href="{{ tracking }}"><i class="fas fa-2x mb-1 fa-location-arrow"></i> {{ text_tracking }}</a>
          {% endif %}
        </div>
      </div>
      {% endif %}
      {{ content_bottom }}
    </div>
    {{ column_right }}
  </div>
</div>
{{ footer }}
