{{ header }}
<div id="account-login" class="container content">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      {% for breadcrumb in breadcrumbs|slice(0,-1) %}
        <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
      <li class="breadcrumb-item active" aria-current="page">{{ breadcrumbs|last.text }}</li>
    </ol>
  </nav>
  {% if success %}
  <div class="alert alert-success alert-dismissible"><i class="fas fa-check-circle"></i> {{ success }}</div>
  {% endif %}
  {% if error_warning %}
  <div class="alert alert-danger alert-dismissible"><i class="fas fa-exclamation-circle"></i> {{ error_warning }}</div>
  {% endif %}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-md-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-md-9' %}
    {% else %}
    {% set class = 'col-md-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <div class="row">
        <div class="col-lg-6">
          <div class="card mb-4">
            <div class="card-body p-4">
              <h2>{{ text_new_customer }}</h2>
              <p><strong>{{ text_register }}</strong></p>
              <p>{{ text_register_account }}</p>
              <div class="d-grid">
                <a href="{{ register }}" class="btn btn-secondary">{{ button_continue }}</a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="card mb-4">
            <div class="card-body p-4">
              <h2>{{ text_returning_customer }}</h2>
              <p><strong>{{ text_i_am_returning_customer }}</strong></p>
              <form action="{{ action }}" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                  <label class="form-label" for="input-email">{{ entry_email }}</label>
                  <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
                </div>
                <div class="mb-4">
                  <label class="form-label" for="input-password">{{ entry_password }}</label>
                  <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control mb-1" />
                  <a href="{{ forgotten }}">{{ text_forgotten }}</a>
                </div>
                <div class="d-grid gap-2">
                  <input type="submit" value="{{ button_login }}" class="btn btn-primary" />
                  {% if redirect %}
                    <input type="hidden" name="redirect" value="{{ redirect }}" />
                  {% endif %}
                </div>
              </form>
              
              {% set socialauth = oc_load.controller('extension/maza/account/socialauth') %}
              {% if socialauth %}
              <hr />{{ socialauth }}
              {% endif %}
            </div>
          </div>
        </div>
      </div>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}
