{% set uid = random() %}
{% if languages|length > 1 %}
<div class="dropdown mx-2">
  <div class="dropdown-toggle d-flex align-items-center" id="language-dropdown-toggle{{ uid }}" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
  {% for language in languages %}
  {% if language.code == code %} 
  <img class="me-2" src="catalog/language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" title="{{ language.name }}"> <span class="d-none d-sm-inline">{{ language.name }}</span>
  {% endif %}
  {% endfor %}</div>
  <div class="dropdown-menu dropdown-menu-{{ position }}" aria-labelledby="language-dropdown-toggle{{ uid }}">
    {% for language in languages %}
    <button class="language-select dropdown-item" type="button" data-code="{{ language.code }}"><img class="icon" src="catalog/language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" title="{{ language.name }}" /> {{ language.name }}</button>
    {% endfor %}
  </div>
</div>
{% endif %}
