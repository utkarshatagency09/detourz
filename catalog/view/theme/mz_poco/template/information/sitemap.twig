{{ header }}
<div id="information-sitemap" class="container content">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      {% for breadcrumb in breadcrumbs|slice(0,-1) %}
        <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
      <li class="breadcrumb-item active" aria-current="page">{{ breadcrumbs|last.text }}</li>
    </ol>
  </nav>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-md-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-md-9' %}
    {% else %}
    {% set class = 'col-md-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h1 class="page-title h4 mb-3">{{ heading_title }}</h1>
      <div class="row">
        <div class="col-sm-6">
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title">{{ text_category }}</h5>
              <ul>
                {% for category_1 in categories %}
                <li><a href="{{ category_1.href }}">{{ category_1.name }}</a>
                  {% if category_1.children %}
                  <ul>
                    {% for category_2 in category_1.children %}
                    <li><a href="{{ category_2.href }}">{{ category_2.name }}</a>
                      {% if category_2.children %}
                      <ul>
                        {% for category_3 in category_2.children %}
                        <li><a href="{{ category_3.href }}">{{ category_3.name }}</a></li>
                        {% endfor %}
                      </ul>
                      {% endif %}
                    </li>
                    {% endfor %}
                  </ul>
                  {% endif %}
                </li>
                {% endfor %}
              </ul>
            </div>
          </div>
        </div>
        <div class="col-sm-6">
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title">{{ text_page }}</h5>
              <ul class="list-unstyled m-0">
                <li><a href="{{ special }}">{{ text_special }}</a></li>
                <li><a href="{{ history }}">{{ text_cart }}</a></li>
                <li><a href="{{ checkout }}">{{ text_checkout }}</a></li>
                <li><a href="{{ search }}">{{ text_search }}</a></li>
              </ul>
            </div>  
          </div>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><a href="{{ account }}">{{ text_account }}</a></h5>
              <ul class="list-unstyled m-0">
                <li><a href="{{ edit }}">{{ text_edit }}</a></li>
                <li><a href="{{ password }}">{{ text_password }}</a></li>
                <li><a href="{{ address }}">{{ text_address }}</a></li>
                <li><a href="{{ history }}">{{ text_history }}</a></li>
                <li><a href="{{ download }}">{{ text_download }}</a></li>
              </ul>
            </div>  
          </div>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title">{{ text_information }}</h5>
              <ul class="list-unstyled m-0">
                {% for information in informations %}
                <li><a href="{{ information.href }}">{{ information.title }}</a></li>
                {% endfor %}
                <li><a href="{{ contact }}">{{ text_contact }}</a></li>
              </ul>
            </div>  
          </div>
        </div>
      </div>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}