{{ header }}
<div id="information-contact" class="container content pb-4">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      {% for breadcrumb in breadcrumbs|slice(0,-1) %}
        <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
      <li class="breadcrumb-item active" aria-current="page">{{ breadcrumbs|last.text }}</li>
    </ol>
  </nav>
  <div class="row">
    {{ column_left }}
    {% if column_left and column_right %}
      {% set class = 'col-md-6' %}
    {% elseif column_left or column_right %}
      {% set class = 'col-md-9' %}
    {% else %}
      {% set class = 'col-md-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <div class="row">
        <div class="col-md-4 col-xl-3 mb-4">
          <div class="card h-100">
            <h3 class="h4 card-header text-bg-light">{{ text_location }}</h3> 
            {% if image %}
              <img src="{{ image }}" alt="{{ store }}" title="{{ store }}" class="card-img-top"/>
            {% endif %}
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <h5 class="card-title">{{ store }}</h5>
                <address>
                  {{ address }}
                </address>
                {% if geocode %}
                  <a href="https://maps.google.com/maps?q={{ geocode|url_encode }}&hl={{ geocode_hl }}&t=m&z=15" target="_blank" class="btn btn-info"><i class="fas fa-map-marker"></i> {{ button_map }}</a>
                {% endif %}
              </li>
              <li class="list-group-item">
                <strong>{{ text_telephone }}</strong><br/>
                {{ telephone }}<br/>
                {% if fax %}
                  <strong>{{ text_fax }}</strong><br/>
                  {{ fax }}
                {% endif %}
              </li>
              <li class="list-group-item">
                {% if open %}
                  <strong>{{ text_open }}</strong>
                  <br/>
                  {{ open }}
                  <br/>
                {% endif %}
                {% if comment %}
                  <strong>{{ text_comment }}</strong>
                  <br/>
                  {{ comment }}
                {% endif %}
              </li>
            </ul>
          </div>
        </div>
        <div class="col-md-8 col-xl-9 mb-4">
          <div class="card h-100">
            <h1 class="h4 card-header text-bg-light">{{ text_contact }}</h1>
            <div class="card-body">
              <form class="" action="{{ action }}" method="post" enctype="multipart/form-data">
                <div class="form-floating mb-4 required">
                  <input type="text" name="name" value="{{ name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control form-control-lg{{ error_name?' is-invalid' }}"/>
                  <label for="input-name">{{ entry_name }}</label>
                  {% if error_name %}
                    <div class="invalid-feedback">{{ error_name }}</div>
                  {% endif %}
                </div>
                <div class="form-floating mb-4 required">
                  <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control form-control-lg{{ error_email?' is-invalid' }}"/>
                  <label for="input-email">{{ entry_email }}</label>
                  {% if error_email %}
                    <div class="invalid-feedback">{{ error_email }}</div>
                  {% endif %}
                </div>
                <div class="form-floating mb-4 required">
                  <textarea name="enquiry" rows="10" id="input-enquiry" placeholder="{{ entry_enquiry }}" class="form-control form-control-lg {{ error_enquiry?' is-invalid' }}" style="height: 200px">{{ enquiry }}</textarea>
                  <label for="input-enquiry">{{ entry_enquiry }}</label>
                  {% if error_enquiry %}
                    <div class="invalid-feedback">{{ error_enquiry }}</div>
                  {% endif %}
                </div>
                {{ captcha }}
                <div class="buttons clearfix">
                  <div class="float-end">
                    <input class="btn btn-lg btn-primary" type="submit" value="{{ button_submit }}"/>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      {% if locations %}
        <h4>{{ text_store }}</h4>
        <div class="accordion" id="accordion">
          {% for location in locations %}
            <div class="accordion-item">
              <h5 class="accordion-header">
              <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-parent="#accordion">
                {{ location.name }}
                <a href="#collapse-location{{ location.location_id }}" class="accordion-toggle d-flex"><i class="fas fa-caret-down ms-auto"></i></a>
              </button>
              </h5>
              <div class="accordion-collapse collapse" data-bs-parent="#accordion" id="collapse-location{{ location.location_id }}">
                <div class="accordion-body">
                  <div class="row">
                    {% if location.image %}
                      <div class="col-sm-3"><img src="{{ location.image }}" alt="{{ location.name }}" title="{{ location.name }}" class="img-thumbnail"/></div>
                    {% endif %}
                    <div class="col-sm-3"><strong>{{ location.name }}</strong>
                      <br/>
                      <address>
                        {{ location.address }}
                      </address>
                      {#{% if location.geocode %}
                        <a href="https://maps.google.com/maps?q={{ location.geocode|url_encode }}&hl={{ geocode_hl }}&t=m&z=15" target="_blank" class="btn btn-info"><i class="fas fa-map-marker"></i> {{ button_map }}</a>
                      {% endif %}#}
                    </div>
                    <div class="col-sm-3"><strong>{{ text_telephone }}</strong>
                      <br>
                      {{ location.telephone }}
                      <br/>
                      {% if location.fax %}
                        <strong>{{ text_fax }}</strong>
                        <br>
                        {{ location.fax }}
                      {% endif %}
                    </div>
                    <div class="col-sm-3">
                      {% if location.open %}
                        <strong>{{ text_open }}</strong>
                        <br/>
                        {{ location.open }}
                        <br/>
                      {% endif %}
                      {% if location.comment %}
                        <strong>{{ text_comment }}</strong>
                        <br/>
                        {{ location.comment }}
                      {% endif %}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      {% endif %}
      
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}
