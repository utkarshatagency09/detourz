<h3>{{ heading_title }}</h3>
<div class="row auto-clear-grid">
 {% for product in products %}
  <div class="product-layout col-12 col-md-4 col-lg-3">
    <div class="product-thumb transition">
      <div class="image shuffle-images effect-fade">
        <a href="{{ product.href }}">{% if lazy_loading %}
        <img class="lazy-load active" data-src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" />
        {% else %}
        <img class="active" src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" />
        {% endif %}</a>
        <div class="product-action">
            {% if cart_status %}
            <span data-bs-toggle="tooltip" title="{{ button_cart }}" onclick="cart.add('{{ product.product_id }}');"><i class="mz-icon-shopping-bag"></i></span>
            {% endif %}
            {% if wishlist_status %}
            <span data-bs-toggle="tooltip" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');"><i class="mz-icon-heart"></i></span>
            {% endif %}
            {% if quick_view_status %}
            <span data-bs-toggle="tooltip" title="{{ button_quick_view }}" onclick="mz_quick_view.show('{{ product.product_id }}');"><i class="fa fa-eye"></i></span>
            {% endif %}
            {% if compare_status %}
            <span data-bs-toggle="tooltip" title="{{ button_compare }}" onclick="compare.add('{{ product.product_id }}');"><i class="mz-icon-reload"></i></span>
            {% endif %}
        </div>
      </div>
      <div class="caption">
        <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
        {% if description_status %}
        <p>{{ product.description }}</p>
        {% endif %}
        {% if product.price %}
        <p class="price">
          {% if not product.special %}
          <span class="price-new">{{ product.price }}</span>
          {% else %}
          <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span>
          {% endif %}
          {% if product.tax %}
          <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
          {% endif %}
        </p>
        {% endif %}
        {% if rating_status and product.rating %}
        <div class="rating">
          {% for i in range(1, 5) %}
          {% if product.rating < i %}
          <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-1x"></i></span>
          {% else %}
          <span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>
          {% endif %}
          {% endfor %}
        </div>
        {% endif %}
      </div>
    </div>
  </div>
  {% endfor %}
</div>
