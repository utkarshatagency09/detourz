<div class="accordion-item">
  <h5 class="accordion-header border-bottom-0" id="collapse-coupon-heading"><button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-coupon" aria-expanded="true" aria-controls="collapse-coupon">{{ heading_title }}</button></h5>
  <div id="collapse-coupon" class="accordion-collapse collapse" aria-labelledby="collapse-coupon-heading" data-bs-parent="#accordion">
    <div class="accordion-body">
      	<div class="input-group">
			<input type="text" name="coupon" value="{{ coupon }}" placeholder="{{ entry_coupon }}" id="input-coupon" class="form-control"/>
			<button type="button" id="button-coupon" data-loading-text="{{ text_loading }}" class="btn btn-primary">{{ button_coupon }}</button>
		</div>
    </div>
  </div>
  <script><!--
  $('#button-coupon').on('click', function() {
	  $.ajax({
		  url: 'index.php?route=extension/total/coupon/coupon',
		  type: 'post',
		  data: 'coupon=' + encodeURIComponent($('input[name=\'coupon\']').val()),
		  dataType: 'json',
		  beforeSend: function() {
			  $('#button-coupon').text('{{ text_loading }}');
		  },
		  complete: function() {
			  $('#button-coupon').text('{{ button_coupon }}');
		  },
		  success: function(json) {
				$('.alert-dismissible').remove();

				if (json['error']) {
					$('#collapse-coupon .accordion-body').prepend('<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> ' + json['error'] + ' <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>');
				}

				if (json['redirect'] && !$('#maza-checkout').length) {
					location = json['redirect'];
				}
				if($('#maza-checkout').length){
					$.getJSON("index.php?route=extension/maza/checkout/total/update", function(json) {
						if (json['redirect']) location = json['redirect'];
						$("#checkout-total").replaceWith(json.total);
						$("#payment-method").replaceWith(json.payment_method);
					});
				}
		  },
		  error: function(xhr, ajaxOptions, thrownError) {
			  alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
		  }
	  });
  });
  //-->
  </script>
</div>
