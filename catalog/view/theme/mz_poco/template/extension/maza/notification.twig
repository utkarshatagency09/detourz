{% if notifications %}
<h5 class="p-2 ps-3 m-0 d-flex align-items-center">{{ heading_title }} <button type="button" class="ms-auto btn btn-sm btn-close"></button></h5>
<div class="list-group list-group-flush">
{% for notification in notifications %}
<a href="{{ notification.href }}" class="list-group-item list-group-item-action {{ notification.unread?'active' }}">
  <div class="d-flex w-100 justify-content-between">
    <h5 class="mb-1 text-truncate text-primary">{{ notification.title }}</h5>
    <small class="text-muted">{{ notification.elapsed }}</small>
  </div>
  <p>{{ notification.message }}</p>
</a>
{% endfor %}
</div>
{% else %}<p class="text-muted p-4">{{ text_empty }}</p>
{% endif %}