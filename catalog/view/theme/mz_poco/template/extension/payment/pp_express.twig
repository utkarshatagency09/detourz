{% if payment_pp_express_incontext_disable != 1 %}
<div class="buttons clearfix">
  <div class="float-end">
    <a id="button-confirm" href="{{ continue }}"></a>
  </div>
</div>
<script><!--
window.paypalCheckoutReady = function () {
  paypal.checkout.setup('{{ username }}', {
    container: 'button-confirm',
    environment: 'sandbox'
  });
};
//--></script>
<script src="//www.paypalobjects.com/api/checkout.js" async></script>
{% else %}
<div class="buttons clearfix">
  <div class="float-end">
    <a href="{{ continue }}" class="btn btn-lg btn-primary" id="button-confirm" data-loading-text="{{ text_loading }}">{{ button_continue }}</a>
  </div>
</div>
<script><!--
    $('#button-confirm').on('click', function() {
        $('#button-confirm').prepend('<span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>');
    });
//--></script>
{% endif %}
